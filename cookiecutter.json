{
  "project_name": "My Project",
  "project_slug": "{{ cookiecutter.project_name.lower().replace(' ', '_').replace('-', '_') }}",
  "project_short_description": "A short description of the project",
  "python_version": "3.10",
  "author_name": "Your name",
  "author_email": "your.email@example.com",
  "include_api": {
    "type": "list",
    "choices": [
      {
        "value": "y",
        "name": "Yes, include API module (for exposing code to other Python projects)"
      },
      {
        "value": "n",
        "name": "No, skip API (for simple scripts or if adding it later)"
      }
    ],
    "default": "n"
  },
  "open_source_license": ["MIT", "Apache-2.0", "GPL-3.0", "Proprietary"],
  "use_docker": ["y", "n"],
  "use_ci": ["github", "gitlab", "none"],
  "version": "0.1.0",
  "_extensions": ["jinja2_time.TimeExtension"],
  "_copy_without_render": [
    "*.html",
    "*.js",
    "*.css",
    "*.png",
    "*.jpg",
    "*.jpeg",
    "*.gif",
    "*.ico",
    "*.svg",
    "*.eot",
    "*.ttf",
    "*.woff",
    "*.woff2"
  ]
}
